{
  "manifest_version": 3,
  "name": "Image Tag Converter",
  "description": "This extension converts Markdown image syntax to image html tag",
  "version": "0.0.1",
  "action": {
    "default_popup": "./popup/index.html"
  },
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["./main.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "128": "./assets/icon.png"
  }
}
