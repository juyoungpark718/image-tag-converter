{
  "name": "image-tag-converter",
  "type": "commonjs",
  "version": "1.0.0",
  "main": "main.js",
  "repository": "https://github.com/juyoungpark718/image-tag-converter.git",
  "author": "juyoungpark718 <juyoung7018.park@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "esbuild ./src/main.ts ./src/popup/index.ts --outdir=dist --bundle --sourcemap && rsync -r --exclude 'test' --exclude '*.ts' ./src/ ./dist/ && cp ./manifest.json ./dist",
    "predev": "cp ./src/index.html ./dist/index.html",
    "dev": "esbuild main=./src/main.ts --outdir=dist --bundle --sourcemap --watch --servedir=dist",
    "postdev": "rm -rf ./dist/index.html"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "esbuild": "^0.17.11",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@fxts/core": "^0.13.0",
    "@types/chrome": "^0.0.219"
  }
}
